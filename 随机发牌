# coding: UTF8
import string
import random
all = []
for x in[str(i) for i in range(1,14)]:
for y in['黑桃','红桃','草花','方片']:
all.append(y+x)
joker = ['小王','大王']
all.extend(joker)
# print all
random.shuffle(all)
# print all
# print 
a = all[:17]
# print a
b = all[17:17+17]
# print b 
c = all[17+17:-3]
# print c
d = all[-3:]
# print d
print "第一个人的牌是："
print ";".join(a)
print"第二个人的牌是："
print ";".join(b)
print"第三个人的牌是："
print ";".join(c)
print"3张底牌是："
print ";".join(d) 
